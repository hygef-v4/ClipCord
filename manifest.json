{
    "manifest_version": 3,
    "name": "Discord Clip Downloader Pro",
    "version": "1.3",
    "description": "Scans the current Discord channel for video clips and allows individual or bulk downloads.",
    "permissions": [
      "downloads",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "https://discord.com/*",
      "https://*.discord.com/*"
    ],
    "action": {
      "default_title": "Download Discord Clips",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }